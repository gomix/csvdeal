<%= form_for(@documento , :html => { :multipart => true }) do |f| %>
  <% if @documento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@documento.errors.count, "error") %> provocaron que no se pudiera guardar el documento:</h2>

      <ul>
      <% @documento.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="remitente">
    <%= label_tag("Remitente") %>
    <%= f.text_field :remitente %>
  </div>

  <div id="direccion_del_remitente">
    <%= label_tag("Dirección del remitente") %>
    <%= f.text_field :direccion_del_remitente %>
  </div>

  <div id="tipo_de_envio">
    <%= label_tag("Tipo de envío") %>
    <%= f.text_field :tipo_de_envio, :readonly => true %>
  </div>

  <div id="csv_file">
    <%= f.file_field :csv_file %>
  </div>
  
  <div id="csv_file_filtro">
  <%=  select_tag "filtro", 
         options_for_select([['CANTV', 'cantv'], 
                            ['PDVSA', 'pdvsa'],
                            ['FANB', 'fanb'],
                            ['FANB Armada', 'armada']]) %> 
  </div>


  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
<% end %>
